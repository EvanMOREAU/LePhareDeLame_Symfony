{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <link href="/assets/css/login.css" rel="stylesheet">
    <div class="container">
        <form action="{{ path('app_login') }}" class="form-control" method="post">
            <p class="title">Se connecter</p>
            <div class="input-field">
                <input type="text" class="input" id="username" name="_username" value="{{ last_username }}">
                <label class="label" for="input">Email</label>
            </div>
            <div class="input-field">
                <input type="password" class="input" id="password" name="_password">
                <label class="label" for="input">Mot de passe</label>
            </div>
            <a>Forgot your password?</a>
            <button class="submit-btn">Connexion</button>
        </form>
    </div>

{% endblock %}