                        {% endfor %}
                        <td>
                            <a class="btn {% if appointment.pdf != null %}btn-primary{% else %}btn-danger{% endif %}" href="{{ asset('uploads/appointments/' ~ appointment.pdf) }}" target="_blank">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
