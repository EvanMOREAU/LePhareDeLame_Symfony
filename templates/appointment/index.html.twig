    <br>
    <div class="container">
        <h3> Rendez-vous à venir</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Horaire</th>
                    <th>Date</th>
                    <th>Adresse mail</th>
                    <th>Type de séance</th>
                    <th>Compte Rendu</th>
                </tr>
            </thead>
            <tbody>
            {% for appointment in app.user.getAppointments() %}
                {% if appointment.date > currentDate %}
                    <tr>
