{# templates/rating_service/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}RatingService index{% endblock %}

{% block body %}
    <link href="/assets/css/form.css" rel="stylesheet">

<br><br><br><br>
    <div class="form-container">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Value</th>
                <th>Published</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for rating_service in rating_services %}
                <tr>
                    <td>{{ rating_service.id }}</td>
                    <td>{{ rating_service.value }}</td>
                    <td>{{ rating_service.published ? 'Yes' : 'No' }}</td>
                    <td>
                        <a href="{{ path('app_rating_service_show', {'id': rating_service.id}) }}">show</a>
                        
                        {% if rating_service.published %}
                            <form method="post" action="{{ path('app_rating_service_publish', {'id': rating_service.id}) }}" style="display: inline;">
                                <button type="submit" class="btn btn-sm btn-warning">DÃ©publier</button>
                            </form>
                        {% else %}
                            <form method="post" action="{{ path('app_rating_service_publish', {'id': rating_service.id}) }}" style="display: inline;">
                                <button type="submit" class="btn btn-sm btn-success">Publier</button>
                            </form>
                        {% endif %}
                        <form method="post" action="{{ path('app_rating_service_delete', {'id': rating_service.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rating_service.id) }}">
                            <button class="btn">Delete</button>
                        </form>

                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
